  "authors": [
    "jelgue"
  ],
  "contact": {
    "homepage": "https://jelgue.net/",
    "sources": "https://github.com/helgeh/space-crafting"
  },

  "license": "gpl-3.0",
  "icon": "assets/spacecrafting/icon.png",

  "environment": "*",
